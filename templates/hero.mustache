{{!
    @template theme_ucl/hero
    Example context (json):
    {
        "name": "site name",
        "description": "site descrition"
    }
}}

{{! UCL Hero element. }}
<div id="ucl-hero" class="full-width py-5">
    <div id="ucl-hero-content" class="container d-flex">
        <div class="d-flex flex-column align-self-center fadeInUp">

            <h1 class="h1 display-1 font-weight-bold">{{{name}}}</h1>

            <p>
                <a class="btn btn-lg btn-primary" href="{{ config.wwwroot }}/login/">
                UCL login
                <i class="fa-solid fa-arrow-right transition"></i>
                </a>
                <br>
                <a class="btn btn-lg btn-link text-dark" href="{{ config.wwwroot }}/login/?altlogin=1">
                Guest access
                </a>
            </p>
        </div>
    </div>
</div>