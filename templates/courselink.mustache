{{!
    @template theme_ucl/course-link
}}

{{! Catalogue pages course listing. }}
<div class="row py-2 w-100 border-bottom">

    <div class="col">
    <div class="d-flex position-relative">
        {{#image}}
        <div class="rounded-circle mr-2 bg-cover d-inline-block flex-shrink-0"
        style="background-image: url('{{{.}}}'); height: 50px; width: 50px;;"></div>
        {{/image}}
         <a href="{{viewurl}}" class="mr-2 stretched-link">{{fullname}}</a>
    </div>
    </div>

    {{! Search mode output. }}
    {{#search}}
    <div class="col-4">
        {{#year}}
            <span class="badge badge-pill badge-dark">{{{year}}}</span>
        {{/year}}

        {{#coursecategory}}
            <a href="{{{caturl}}}">{{{coursecategory}}}</a>
        {{/coursecategory}}
    </div>
    {{/search}}

    <div class="col-2 text-right">
        {{! Context locked. }}
        {{#readonly}}
            <span class="badge badge-pill badge-danger mr-2">Read only</span>
        {{/readonly}}

        {{! Visability. }}
        {{^visible}}
            <span class="badge badge-pill badge-warning mr-2">{{#str}} hiddenfromstudents {{/str}}</span>
        {{/visible}}

        {{! Enrolment icons. }}
        <div class="d-inline-block">
            {{{enrolmenticons}}}
        </div>
    </div>
</div>

