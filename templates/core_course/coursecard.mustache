{{!
    @template core_course/coursecard

    This template renders the a card for the course cards.

    Example context (json):
    {
        "courses": [
            {
                "name": "Assignment due 1",
                "viewurl": "https://moodlesite/course/view.php?id=2",
                "courseimage": "https://moodlesite/pluginfile/123/course/overviewfiles/123.jpg",
                "fullname": "course 3",
                "hasprogress": true,
                "progress": 10,
                "visible": true
            }
        ]
    }
}}

{{! Coursecard. }}
<div class="dashboard-card mb-5 position-relative {{#isfavourite}}starred{{/isfavourite}}"
    role="listitem"
    data-region="course-content"
    data-course-id="{{{id}}}">

    <div class="d-flex flex-column h-100">

        {{! Image. }}
        <div class="bg-cover transition mb-2"
            style='background-image: url("{{{courseimage}}}"); height: 140px;'>

            {{! Visability. }}
            {{^visible}}
                <span class="badge badge-pill badge-warning m-2">{{#str}} hiddenfromstudents {{/str}}</span>
            {{/visible}}

        </div>

        {{! Name & Catagory. }}
        <div class="dashboard-card-details">
            <a href="{{viewurl}}" class="stretched-link font-weight-bold line-clamp-3">{{fullname}}</a>
            <div><small>{{$coursecategory}}{{/coursecategory}}</small></div>
        </div>

        <div class="dashboard-card-meta mt-auto">

            {{! Actions. }}
            <div class="course-card-actions">
                {{> theme_ucl/core_course/card-actions }}
            </div>

            {{! Progress. }}
            <div class="{{^progress}} invisible {{/progress}}">
                <small>Progress: {{progress}}%</small>
                <div class="progress ">
                    <div class="progress-bar bg-success" role="progressbar"
                    aria-valuenow="{{progress}}"
                    style="width: {{progress}}%"
                    aria-valuemin="0"
                    aria-valuemax="100"></div>
                </div>
            </div>

        </div>
    </div>
</div>
