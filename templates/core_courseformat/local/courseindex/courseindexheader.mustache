<style>
#courseindex-toggle[aria-pressed=true] .courseindex-toggle-expand {
    display: none;
}
#courseindex-toggle[aria-pressed=false] .courseindex-toggle-collapse {
    display: none;
}
</style>

{{#js}}
require(['jquery'], function($) {
    $('#courseindex-toggle').on('click', function() {
        state = $(this).attr('aria-pressed');
        if (state=='false') {
            $('#courseindex-content .courseindex-item-content.collapse').collapse('show');
            $(this).attr('aria-pressed', 'true');
        }
        if (state=='true') {
            $('#courseindex-content .courseindex-item-content.collapse').collapse('hide');
            $(this).attr('aria-pressed', 'false');
        }
    });
});
{{/js}}